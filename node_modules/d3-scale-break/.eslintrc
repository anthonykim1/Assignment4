{
  "extends": [
    "eslint:recommended",
    "plugin:tape/recommended"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 9
  },
  "plugins": [
    "tape"
  ],
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "rules": {
    "no-cond-assign": 0,
    "indent": ["error", 4],
    "eol-last": ["error"],
    "import/prefer-default-export": "off",
    "tape/no-ignored-test-files": "off"
  }
}
